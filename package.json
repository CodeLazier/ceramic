{
  "name": "ceramic",
  "version": "0.1.0",
  "private": true,
  "main": "app.js",
  "homepage": "./",
  "author": "Jeremy Faivre <contact@jeremyfa.com>",
  "description": "Ceramic Editor",
  "build": {
    "appId": "jeremyfa.ceramic",
    "productName": "Ceramic",
    "asar": false,
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.editorconfig,.flowconfig,.yarn-metadata.json,.idea,.vs,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity}",
      "!src",
      "!ceramic",
      "!config",
      "!public",
      "!scripts",
      "!tsconfig.json",
      "!tslint.json",
      "!node_modules/ceramic-tools/sample",
      "build",
      "app.js"
    ]
  },
  "dependencies": {
    "antd": "^2.11.2",
    "autobind-decorator": "^2.0.0",
    "ceramic-tools": "github:jeremyfa/ceramic",
    "detect-port": "^1.2.1",
    "express": "^4.15.3",
    "keypather": "^2.0.1",
    "mobx": "^3.1.16",
    "mobx-react": "^4.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "reflect-metadata": "^0.1.10",
    "semantic-ui-css": "^2.2.10",
    "semantic-ui-react": "^0.70.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.3",
    "@types/react": "^15.0.32",
    "@types/react-dom": "^15.5.1",
    "app-root-path": "^2.0.1",
    "autoprefixer": "7.1.0",
    "case-sensitive-paths-webpack-plugin": "2.0.0",
    "chalk": "1.1.3",
    "cli-highlight": "1.1.4",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "css-loader": "0.28.1",
    "dotenv": "4.0.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.16.2",
    "electron-rebuild": "^1.5.11",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.28.0",
    "jest": "20.0.3",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.0.0",
    "postcss-loader": "2.0.5",
    "promise": "7.1.1",
    "react-dev-utils": "^2.0.1",
    "react-error-overlay": "^1.0.6",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.17.0",
    "sw-precache-webpack-plugin": "0.9.1",
    "ts-loader": "^2.0.3",
    "tslint": "^5.2.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.0.0",
    "typescript": "~2.3.3",
    "url-loader": "0.5.8",
    "wait-on": "^2.0.2",
    "webpack": "2.6.0",
    "webpack-dev-server": "2.4.5",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "cross-env NODE_ENV=production NODE_PATH=src node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "react": "cross-env BROWSER=none NODE_ENV=development NODE_PATH=src node scripts/start.js",
    "react-browser": "cross-env NODE_ENV=development NODE_PATH=src node scripts/start.js",
    "electron-dev": "ELECTRON_DEV=1 electron .",
    "electron-prod": "electron .",
    "start": "concurrently 'npm run react-browser' '$(npm bin)/wait-on http://localhost:3000/ && sleep 1 && npm run electron-dev'",
    "start-browser": "npm run react-browser",
    "start-electron": "concurrently 'npm run react' '$(npm bin)/wait-on http://localhost:3000/ && sleep 1 && npm run electron-dev'",
    "clean": "rimraf ./out && rimraf ./build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild -f",
    "update-ceramic": "rimraf ./node_modules/ceramic-tools && npm install jeremyfa/ceramic"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
