{
    "selectDescription": "Select build setting",
    "items": [
        {
            "displayName": "▷ Tools plugin",
            "description": "ceramic plugin build --tools",
            "tasks": [{
                "type": "shell",
                "taskName": "build",
                "presentation": {
                    "echo": true,
                    "reveal": "always",
                    "focus": false,
                    "panel": "shared"
                },
                "command": "ceramic",
                "args": ["plugin", "build", "--debug", "--tools", "--vscode-editor"],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": "$haxe"
            }],
            "onSelect": {
                "command": "ceramic",
                "args": ["plugin", "hxml", "--tools", "--debug", "--completion", "--output", "completion.hxml"]
            }
        },
        {
            "displayName": "▶︎ Runtime plugin",
            "description": "ceramic luxe run web --debug --setup --assets --variant plugin",
            "tasks": [
                {
                    "type": "shell",
                    "taskName": "build",
                    "command": "ceramic",
                    "presentation": {
                        "echo": true,
                        "reveal": "always",
                        "focus": false,
                        "panel": "shared"
                    },
                    "args": [
                        "luxe",
                        "run",
                        "web",
                        "--debug",
                        "--setup",
                        "--assets",
                        "--vscode-editor",
                        "--hxml-output",
                        "../completion.hxml",
                        "--cwd",
                        "sample",
                        "--variant",
                        "plugin"
                    ],
                    "group": {
                        "kind": "build",
                        "isDefault": true
                    },
                    "problemMatcher": "$haxe",
                    "runOptions": {
                        "instanceLimit": 1
                    }
                }
            ],
            "onSelect": {
                "command": "ceramic",
                "args": [
                    "luxe",
                    "hxml",
                    "web",
                    "--debug",
                    "--output",
                    "../completion.hxml",
                    "--cwd",
                    "sample",
                    "--variant",
                    "plugin"
                ]
            }
        }
    ],
    "baseItem": {
        "version": "2.0.0"
    }
}
